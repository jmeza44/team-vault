# Team Vault Environment Variables

# Development
NODE_ENV=development

# Database
DATABASE_URL="postgresql://username:password@localhost:5432/team_vault_dev"

# JWT Configuration
JWT_SECRET="your-super-secure-jwt-secret-must-be-32-chars-minimum-dev"
JWT_REFRESH_SECRET="your-super-secure-refresh-secret-different-from-above-dev"
JWT_EXPIRES_IN="15m"
JWT_REFRESH_EXPIRES_IN="7d"

# Encryption Configuration
ENCRYPTION_KEY="your-32-byte-encryption-master-key-for-aes-256-encryption-dev"

# Email Configuration (Development)
SMTP_HOST="localhost"
SMTP_PORT="1025"
SMTP_USER=""
SMTP_PASS=""
EMAIL_FROM="noreply@teamvault.local"

# CORS Configuration
CORS_ORIGIN="http://localhost:5173"

# Application Configuration
PORT=3000
LOG_LEVEL="debug"

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Frontend API URL
VITE_API_BASE_URL="http://localhost:3000/api"
